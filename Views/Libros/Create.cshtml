<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script> *@

<link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@2.0.1/dist/css/multi-select-tag.css">

<h1>Registrar Libro</h1>

<hr />
<div class="row mt-2 fw-bold">
    <div class="col-md-4">
        <form asp-action="Create" id="formularioLibros" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-2">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="row mt-2  fw-bold">
                <div class="col-8 col-lg-6 ms-1">

                   

                    <div class="form-group mb-2">
                        <label for="GeneroIds">Géneros:</label>
                       
                        <select  asp-for="GeneroIds" name="GeneroIds" id="GeneroIds" asp-items="ViewBag.Generos"   ></select>
                    </div> 
              

                </div>
                <div class="col-8 col-lg-6 ms-1">

                   
                    <div class="form-group">
                        <label for="AutorIds">Autores:</label>
                        <select  asp-for="AutorIds" name="AutorIds" id="AutorIds" asp-items="ViewBag.Autores" ></select>
                    </div>
                </div>

               
                <div id="errorGenero"></div>
               
            </div>
           
            @Html.Hidden("CantidadLibros",0)
       
            <div class="form-group mt-2">
                <label asp-for="Descripcion" class="control-label"></label>
              
                <textarea rows="4" cols="50" asp-for="Descripcion" class="form-control"></textarea>

                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mt-2">
                <label asp-for="ImagenLibro" class="control-label"></label>
                <input type="file" asp-for="ImagenLibro" name="ImagenLibro" class="form-control" />     
            </div>
            
            <div class="form-group mt-2">
                @* <button class="boton medium" type="submit">Registrar</button> *@
                <button id="botonRegistrar" class="boton" type="submit">Registrar</button>

            </div>
        </form>
    </div>
</div>

<div>
    <button class="mt-2 Eliminar"> <a class="text-dark" asp-action="Index">Regresar</a></button>
</div>


<script src="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@2.0.1/dist/js/multi-select-tag.js"></script>

<script>
    new MultiSelectTag('GeneroIds',{
            tagColor: {
            textColor: '#fff',
            borderColor: '#0000',
            bgColor: '#1e6042',
        },
     onChange: function(values) {
        console.log(values);
        }
    }); 
    
    new MultiSelectTag('AutorIds',{
            tagColor: {
            textColor: '#fff',
            borderColor: '#0000',
            bgColor: '#1e6042',
        },
        onChange: function(values) {
            console.log(values);
        }
    }); 
</script>

@* <script src="~/js/Libros.js"> </script> *@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    @* <script src="~/js/Libros.js"> </script> *@
    
  
}
