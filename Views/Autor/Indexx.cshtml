@model IEnumerable<tallerbiblioteca.Models.Autor>

@{
    ViewData["Title"] = "Index";
}

<h1>Inicio</h1>

<p>
    <button> <a asp-action="Create">Crear Autor</a></button>
    
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreAutor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreAutor)
            </td>
            <td>    
                <button>
                      <a asp-action="Edit" asp-route-id="@item.Id" >Editar Autor</a> |
                </button>
                <button>
                     <a asp-action="Details" asp-route-id="@item.Id" >Detalle Autor</a> |
                </button>
                <button> <a asp-action="Delete" asp-route-id="@item.Id" >Eliminar Autor</a></button>
               
                  
                   
                   
            </td>
        </tr>
}
    </tbody>
</table>
